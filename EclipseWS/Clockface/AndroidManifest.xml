<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.pvolan.clockface"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.pvolan.clockface.SetupActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <receiver android:name="ru.pvolan.clockface.ClockfaceWidgetProvider_2_2" android:label="@string/clockface_2_2" >
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		        <action android:name="ru.pvolan.clockface.TICK_WIDGET_UPDATE" /><!-- Duplicated in ClockfaceWidgetProvider -->
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/clockface_widget_info_2_2" />
		</receiver>
		
        
        <receiver android:name="ru.pvolan.clockface.ClockfaceWidgetProvider_3_3" android:label="@string/clockface_3_3" >
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		        <action android:name="ru.pvolan.clockface.TICK_WIDGET_UPDATE" /><!-- Duplicated in ClockfaceWidgetProvider -->
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/clockface_widget_info_3_3" />
		</receiver>
        
    </application>

</manifest>